#:kivy 1.9.1

<MyFloatLayout>:
    # Button for changing the text on the screen
    Button:
        text: ""
        size_hint: None, None
        height: root.height
        width: root.width
        background_color: root.main_color
        on_release: root.change_text()

    # Button for adding a thought to the app
    Button:
        text: "Add Thought"
        font_size: root.width / 50
        size_hint: None, None
        height: root.height / 5
        width: root.width / 5
        background_color: root.sub_color
        on_release: root.add_thought()

    # Label to display the text on the screen
    Label:
        text: root.text
        font_size: 50
